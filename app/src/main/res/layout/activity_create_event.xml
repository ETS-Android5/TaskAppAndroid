<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff00">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create event activity"
        android:gravity="center"
        android:textSize="30dp"/>
    <GridLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="9"
        android:columnCount="2"
        android:background="@color/white"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:text="Name"></TextView>

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="281dp"></EditText>

        <TextView
            android:layout_width="100dp"
            android:text="Place"></TextView>

        <EditText
            android:id="@+id/placeInput"
            android:layout_width="281dp"></EditText>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Type"></TextView>

        <RadioGroup
            android:id="@+id/readioGroup"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/radio_Indoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indoor"
                />

            <RadioButton
                android:id="@+id/radio_Outdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outdoor"
               />>

            <RadioButton
                android:id="@+id/radio_Online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                />
        </RadioGroup>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Date and Time"
            android:gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/dateAndTime"
            android:layout_width="281dp"
            android:inputType="datetime"></EditText>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Capacity"
            android:gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/capacityInput"
            android:layout_width="281dp"
            android:inputType="number"></EditText>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Budget"
            android:gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/budgetInput"
            android:layout_width="281dp"
            android:inputType="number"
            ></EditText>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Email"
            android:gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="281dp"
            android:inputType="textEmailAddress"></EditText>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Phone"
            android:gravity="center_vertical"></TextView>
        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="281dp"
            android:inputType="number"></EditText>

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Description"
            android:gravity="center_vertical"></TextView>

        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="268dp"
            android:layout_height="101dp"></EditText>

        <TextView
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:text="Error message : "
            android:textColor="#ff0000"></TextView>

        <TextView
            android:id="@+id/errorTextMessage"
            android:layout_width="250dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text=" "
            android:textSize="20dp"
            android:textColor="#ff0000"></TextView>




    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <Button
            android:id="@+id/CEAcancelBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#2196F3"
            app:backgroundTint="#2196F3"
            android:text="Cancel">

        </Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#2196F3"
            app:backgroundTint="#2196F3"
            android:text="Share">

        </Button>
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#2196F3"
            app:backgroundTint="#2196F3"
            android:text="save"
>
        </Button>

    </LinearLayout>






</LinearLayout>